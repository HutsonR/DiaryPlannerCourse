<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DiaryPlanner" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/backgroundMain</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DiaryPlanner" parent="Base.Theme.DiaryPlanner" />

    <style name="FabCustomShape">
        <item name="cornerFamily">rounded</item> <!-- Тип закругления (круглые углы) -->
        <item name="cornerSize">50%</item> <!-- Процент закругления (50% для круглого вида) -->
        <item name="android:colorBackground">@color/primary</item> <!-- Задний фон -->
    </style>

    <style name="MaterialCalendarPickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primaryPicker</item>
        <item name="android:colorBackground">@color/task_dialog_bg</item>
    </style>

    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/primaryPicker</item>
        <item name="android:colorBackground">@color/task_dialog_bg</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomNavigation.ItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
    </style>

</resources>