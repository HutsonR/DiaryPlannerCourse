<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgDialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        tools:ignore="UselessParent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingBottom="64dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleAddFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/add_title"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/taskIconBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/add_background"
                        android:backgroundTint="@color/blue"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/taskIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_main_hashtag"
                            app:tint="@color/alwaysBlack"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/addTitleTask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/add_background"
                        android:hint="@string/add_title_task"
                        android:inputType="textCapSentences"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/textGray"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <EditText
                    android:id="@+id/addDeskTask"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints=""
                    android:background="@drawable/add_background"
                    android:gravity="start"
                    android:hint="@string/add_desc_task"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textGray"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <LinearLayout
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/add_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_calendar" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="@string/add_date_task"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/datePickerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/add_date_task_blank"
                        android:textColor="@color/textGray"
                        android:textSize="14sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/prioritySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/add_background"
                    android:entries="@array/priority_array"
                    android:gravity="center_vertical" />

                <!--        TIME        -->
                <LinearLayout
                    android:id="@+id/addClearTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_time_task_title"
                        android:textColor="@color/textHintGray"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/addClearTimeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/add_time_clear"
                        android:textColor="@color/textGray"
                        android:textSize="13sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_background"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/timeStartPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:paddingVertical="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_add_clock" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="@string/add_time_task_start"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/timeStartPickerText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/add_date_time_blank"
                                android:textColor="@color/textGray"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/timeEndPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_add_clock" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="@string/add_time_task_end"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/timeEndPickerText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/add_date_time_blank"
                                android:textColor="@color/textGray"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--        COLOR        -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/add_color_task"
                    android:textColor="@color/textHintGray"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/colorPicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_blue"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/blue"
                            android:button="@drawable/add_button"
                            android:checked="true"
                            android:tag="BLUE"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/radio_green"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/green"
                            android:button="@drawable/add_button"
                            android:tag="GREEN"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/radio_yellow"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/yellow"
                            android:button="@drawable/add_button"
                            android:tag="YELLOW"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/radio_red"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/redDialog"
                            android:button="@drawable/add_button"
                            android:tag="RED"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/radio_purple"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/purple"
                            android:button="@drawable/add_button"
                            android:tag="PURPLE"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/radio_pink"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/pink"
                            android:button="@drawable/add_button"
                            android:tag="PINK"
                            android:textAlignment="center" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reminderPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/add_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_bell" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="@string/add_reminder_task"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/reminderPickerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/add_date_time_blank"
                        android:textColor="@color/textGray"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_corner_15"
            android:backgroundTint="@color/bgDialog"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/add_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/close"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <LinearLayout
                android:id="@+id/add_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/background_radius25_primary"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/taskConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_title_small"
                    android:textSize="16sp"
                    android:textColor="@color/alwaysWhite"
                    android:layout_marginEnd="12dp" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_radius25_primary"
                    app:srcCompat="@drawable/ic_add_check"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:contentDescription="@string/apply"
                    app:tint="@color/alwaysWhite" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
