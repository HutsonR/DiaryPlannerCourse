<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/add_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bgDialog"
                    app:srcCompat="@drawable/ic_add_close"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:contentDescription="@string/close" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <LinearLayout
                android:id="@+id/add_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/background_radius25_primary"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/taskConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_title_small"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="12dp" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_radius25_primary"
                    app:srcCompat="@drawable/ic_add_check"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:contentDescription="@string/apply"
                    app:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titleAddFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_title"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:background="@drawable/add_background"
                        android:backgroundTint="@color/blue">
                        <ImageView
                            android:id="@+id/add_image_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_main_hashtag"
                            app:tint="@color/black"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                    <EditText
                        android:id="@+id/addTitleTask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/add_background_border"
                        android:textColor="@color/black"
                        android:textColorHint="@color/textGray"
                        android:hint="@string/add_title_task"
                        android:inputType="textCapSentences"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
                <EditText
                    android:id="@+id/addDeskTask"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/add_background_border"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textGray"
                    android:hint="@string/add_desc_task"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textSize="14sp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    tools:ignore="TouchTargetSizeCheck"
                    android:autofillHints="" />

                <LinearLayout
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_background_border"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_calendar" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:text="@string/add_date_task" />
                    <TextView
                        android:id="@+id/datePickerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/textGray"
                        android:text="@string/add_date_task_blank" />
                </LinearLayout>
                <Spinner
                    android:id="@+id/prioritySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_background"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:entries="@array/priority_array" />

                <LinearLayout
                    android:id="@+id/addClearTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_time_task_title"
                        android:textColor="@color/textHintGray"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/addClearTimeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_time_clear"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/textGray"
                        android:visibility="gone"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/timeStartPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/add_background_border"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_add_clock" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:text="@string/add_time_task_start" />
                        <TextView
                            android:id="@+id/timeStartPickerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textGray"
                            android:text="@string/add_date_time_blank" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/timeEndPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/add_background_border"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_add_clock" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:text="@string/add_time_task_end" />
                        <TextView
                            android:id="@+id/timeEndPickerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textGray"
                            android:text="@string/add_date_time_blank" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_color_task"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/textHintGray"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/colorPicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <RadioButton
                            android:id="@+id/radio_blue"
                            android:checked="true"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/blue"
                            android:button="@drawable/add_button"
                            android:tag="BLUE"
                            android:textAlignment="center"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp" />
                        <RadioButton
                            android:id="@+id/radio_green"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/green"
                            android:button="@drawable/add_button"
                            android:tag="GREEN"
                            android:textAlignment="center"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp" />
                        <RadioButton
                            android:id="@+id/radio_yellow"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/yellow"
                            android:button="@drawable/add_button"
                            android:tag="YELLOW"
                            android:textAlignment="center"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp" />
                        <RadioButton
                            android:id="@+id/radio_red"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/redDialog"
                            android:button="@drawable/add_button"
                            android:tag="RED"
                            android:textAlignment="center"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp" />
                        <RadioButton
                            android:id="@+id/radio_purple"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/purple"
                            android:button="@drawable/add_button"
                            android:tag="PURPLE"
                            android:textAlignment="center"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp" />
                        <RadioButton
                            android:id="@+id/radio_pink"
                            android:background="@drawable/add_button"
                            android:backgroundTint="@color/pink"
                            android:button="@drawable/add_button"
                            android:tag="PINK"
                            android:textAlignment="center"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reminderPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_background_border"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_bell" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:text="@string/add_reminder_task" />
                    <TextView
                        android:id="@+id/reminderPickerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/textGray"
                        android:text="@string/add_date_time_blank" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</FrameLayout>
